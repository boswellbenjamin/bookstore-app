<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1><%= title %></h1>

  <div class="search-form">
    <form action="/books/search" method="GET">
      <div>
        <label for="subject">Subject:</label>
        <select name="subject" id="subject">
          <option value="">All Subjects</option>
          <% subjects.forEach(function(subject) { %>
            <option value="<%= subject %>"><%= subject %></option>
          <% }); %>
        </select>
      </div>

      <div>
        <label for="author">Author (first name):</label>
        <input type="text" name="author" id="author" placeholder="Enter first name">
      </div>

      <div>
        <label for="title">Title contains:</label>
        <input type="text" name="title" id="title" placeholder="Enter keyword">
      </div>

      <button type="submit">Search</button>
    </form>
  </div>

  <div class="books-grid">
    <% if (books.length === 0) { %>
      <p>No books found. Try adjusting your search criteria.</p>
    <% } else { %>
      <% books.forEach(function(book) { %>
        <div class="book-card">
          <h3><%= book.title %></h3>
          <p><strong>Author:</strong> <%= book.author %></p>
          <p><strong>Subject:</strong> <%= book.subject %></p>
          <p class="price">$<%= book.price %></p>

          <form action="/books/cart/add" method="POST" class="inline-form">
            <input type="hidden" name="book_id" value="<%= book.isbn %>">
            <input type="number" name="quantity" value="1" min="1" max="99" class="quantity-input">
            <button type="submit">Add to Cart</button>
          </form>
        </div>
      <% }); %>
    <% } %>
  </div>

  <% if (totalPages > 1) { %>
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>&subject=<%= subject || '' %>&author=<%= author || '' %>&title=<%= title || '' %>">Previous</a>
      <% } %>

      <% if (currentPage > 3) { %>
        <a href="?page=1&subject=<%= subject || '' %>&author=<%= author || '' %>&title=<%= title || '' %>">1</a>
        <% if (currentPage > 4) { %>
          <span>...</span>
        <% } %>
      <% } %>

      <%
        const startPage = Math.max(1, currentPage - 2);
        const endPage = Math.min(totalPages, currentPage + 2);
        for(let i = startPage; i <= endPage; i++) {
      %>
        <a href="?page=<%= i %>&subject=<%= subject || '' %>&author=<%= author || '' %>&title=<%= title || '' %>"
           class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
      <% } %>

      <% if (currentPage < totalPages - 2) { %>
        <% if (currentPage < totalPages - 3) { %>
          <span>...</span>
        <% } %>
        <a href="?page=<%= totalPages %>&subject=<%= subject || '' %>&author=<%= author || '' %>&title=<%= title || '' %>"><%= totalPages %></a>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>&subject=<%= subject || '' %>&author=<%= author || '' %>&title=<%= title || '' %>">Next</a>
      <% } %>
    </div>
  <% } %>

  </div>
</body>
</html>
