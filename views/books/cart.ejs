<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="cart-container">
    <h1><%= title %></h1>

  <% if (cartItems.length === 0) { %>
    <div class="empty-cart">
      <p>Your cart is empty.</p>
      <a href="/books/search" class="btn btn-primary">Continue Shopping</a>
    </div>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Book Title</th>
          <th>Author</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% cartItems.forEach(function(item) { %>
          <tr>
            <td><%= item.title %></td>
            <td><%= item.author %></td>
            <td>$<%= item.price %></td>
            <td>
              <form action="/books/cart/update" method="POST" class="inline-form">
                <input type="hidden" name="isbn" value="<%= item.isbn %>">
                <input type="number" name="quantity" value="<%= item.quantity %>" min="1" max="99" class="quantity-input">
                <button type="submit" class="btn-primary">Update</button>
              </form>
            </td>
            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
            <td>
              <form action="/books/cart/remove" method="POST" class="inline-form">
                <input type="hidden" name="isbn" value="<%= item.isbn %>">
                <button type="submit" class="btn-danger">Remove</button>
              </form>
            </td>
          </tr>
        <% }); %>

        <tr class="grand-total">
          <td colspan="4" class="total">Grand Total:</td>
          <td colspan="2" class="total">$<%= grandTotal.toFixed(2) %></td>
        </tr>
      </tbody>
    </table>

    <div class="actions">
      <a href="/books/search" class="btn btn-primary">Continue Shopping</a>
      <form action="/books/checkout" method="POST" class="inline-form">
        <button type="submit" class="btn btn-success">Proceed to Checkout</button>
      </form>
    </div>
  <% } %>

  </div>
</body>
</html>
