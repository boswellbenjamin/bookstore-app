<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script>
    function printInvoice() {
      window.print();
    }
  </script>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="invoice-container">
  <div class="invoice-header">
    <h1>Invoice</h1>
    <p>Thank you for your purchase!</p>
  </div>

  <div class="invoice-info">
    <div class="info-section">
      <h3>Order Details</h3>
      <p><strong>Order ID:</strong> <%= order.order_id || 'N/A' %></p>
      <p><strong>Order Date:</strong> <%= order.received_date ? new Date(order.received_date).toLocaleDateString() : 'N/A' %></p>
      <p><strong>Order Total:</strong> $<%= order.total_amount ? order.total_amount.toFixed(2) : '0.00' %></p>
    </div>

    <div class="info-section">
      <h3>Customer Information</h3>
      <p><strong>Name:</strong> <%= order.customer_name || 'N/A' %></p>
      <p><strong>Email:</strong> <%= order.customer_email || 'N/A' %></p>
      <p><strong>Phone:</strong> <%= order.customer_phone || 'N/A' %></p>
    </div>
  </div>

  <div class="delivery-info">
    <h3>Delivery Information</h3>
    <p><strong>Expected Delivery Date:</strong> <%= deliveryDate ? new Date(deliveryDate).toLocaleDateString() : 'N/A' %></p>
    <p><strong>Shipping Address:</strong></p>
    <p>
      <%= order.customer_address || 'N/A' %><br>
      <%= order.customer_city || '' %> <%= order.customer_zip || '' %>
    </p>
  </div>

  <h2>Order Items</h2>
  <table>
    <thead>
      <tr>
        <th>Book Title</th>
        <th>Author</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% if (orderItems && orderItems.length > 0) { %>
        <% orderItems.forEach(function(item) { %>
          <tr>
            <td><%= item.title %></td>
            <td><%= item.author %></td>
            <td>$<%= item.price %></td>
            <td><%= item.quantity %></td>
            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
          </tr>
        <% }); %>

        <tr class="total-row">
          <td colspan="4" class="total">Grand Total:</td>
          <td>$<%= order.total_amount ? order.total_amount.toFixed(2) : '0.00' %></td>
        </tr>
      <% } else { %>
        <tr>
          <td colspan="5" style="text-align: center;">No items found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div class="invoice-actions">
    <button onclick="printInvoice()" class="print-btn">Print Invoice</button>
    <a href="/books/search" class="btn btn-primary">Continue Shopping</a>
  </div>

  </div>
</body>
</html>
